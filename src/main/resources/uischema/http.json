{
  "connectorName": "http",
  "connectionName": "http",
  "title": "HTTP Connection",
  "help": "<h1>HTTP Connection</h1> <b>The HTTP Connector allows you to send a http request.</b>",
  "elements": [
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "General",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "baseUrl",
              "displayName": "Base URL",
              "inputType": "string",
              "defaultValue": "http://",
              "required": "true",
              "helpTip": "Enter the base URL of the service, which serves as the root endpoint for all API requests."
            }
          },
          {
            "type": "attributeGroup",
            "value": {
              "groupName": "Auth Configuration",
              "isCollapsed": "true",
              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "name": "authType",
                    "displayName": "Auth Type",
                    "inputType": "combo",
                    "required": "false",
                    "comboValues": [
                      "None",
                      "Basic Auth",
                      "OAuth"
                    ],
                    "defaultValue": "None",
                    "helpTip": ""
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "oauthAuthorizationMode",
                    "displayName": "OAuth Authorization Mode",
                    "inputType": "combo",
                    "required": "true",
                    "comboValues": [
                      "Header",
                      "Payload"
                    ],
                    "defaultValue": "Header",
                    "enableCondition": [{"authType": "OAuth"}]
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "oauthGrantType",
                    "displayName": "OAuth Grant Type",
                    "inputType": "combo",
                    "required": "false",
                    "comboValues": [
                      "Authorization Code",
                      "Client Credentials",
                      "Password"
                    ],
                    "defaultValue": "Authorization Code",
                    "enableCondition": [{"authType": "OAuth"}]
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "username",
                    "displayName": "Username",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "Enter Username",
                    "enableCondition": ["OR",
                      {"authType": "Basic Auth"},
                      ["AND", {"authType": "OAuth"}, {"oauthGrantType": "Password"}]
                    ]
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "password",
                    "displayName": "Password",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "Enter Password",
                    "enableCondition": ["OR",
                      {"authType": "Basic Auth"},
                      ["AND", {"authType": "OAuth"}, {"oauthGrantType": "Password"}]
                    ]
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "clientId",
                    "displayName": "Client Id",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "",
                    "enableCondition": [{"authType": "OAuth"}]
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "clientSecret",
                    "displayName": "Client Secret",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "",
                    "enableCondition": [{"authType": "OAuth"}]
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "tokenUrl",
                    "displayName": "Token URL",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "",
                    "enableCondition": [{"authType": "OAuth"}]
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "refreshToken",
                    "displayName": "Refresh Token",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "",
                    "enableCondition": ["AND", {"authType": "OAuth"}, {"oauthGrantType": "Authorization Code"}]
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "additionalProperties",
                    "displayName": "Additional Properties",
                    "inputType": "string",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "",
                    "enableCondition": [{"authType": "OAuth"}]
                  }
                }
              ]
            }
          },
          {
            "type": "attributeGroup",
            "value": {
              "groupName": "Error Handling",
              "isCollapsed": "true",
              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "name": "timeoutDuration",
                    "displayName": "Timeout Duration",
                    "inputType": "string",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": ""
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "timeoutAction",
                    "displayName": "Timeout Action",
                    "inputType": "combo",
                    "defaultValue": "Never",
                    "required": "false",
                    "comboValues": [
                      "Never",
                      "Discard",
                      "Fault"
                    ],
                    "helpTip": ""
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "suspendErrorCodes",
                    "displayName": "Suspend Error Codes",
                    "inputType": "string",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": ""
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "suspendInitialDuration",
                    "displayName": "Suspend Initial Duration",
                    "inputType": "string",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": ""
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "suspendMaximumDuration",
                    "displayName": "Suspend Maximum Duration",
                    "inputType": "string",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": ""
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "suspendProgressionFactor",
                    "displayName": "Suspend Progression Factor",
                    "inputType": "string",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": ""
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "retryErrorCodes",
                    "displayName": "Retry Error Codes",
                    "inputType": "string",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": ""
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "retryCount",
                    "displayName": "Retry Count",
                    "inputType": "string",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": ""
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "retryDelay",
                    "displayName": "Retry Delay",
                    "inputType": "string",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": ""
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
